{
  "name": "mvcr",
  "version": "1.0.12",
  "description": "Minimum Viable Client Router",
  "repository": "git@github.com:wulfmann/mvcr.git",
  "author": "Joe Snell <joepsnell@gmail.com>",
  "license": "MIT",
  "private": false,
  "source": "src/mvcr.ts",
  "main": "dist/mvcr.js",
  "module": "dist/mvcr.mjs",
  "unpkg": "dist/mvcr.umd.js",
  "scripts": {
    "unit": "jest",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "npm run lint && npm run unit",
    "bump": "standard-version",
    "build": "microbundle --compress --raw",
    "release": "npm run test && npm run bump && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && yarn publish"
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.1",
    "jest": "^24.8.0",
    "microbundle": "^0.11.0",
    "prettier": "1.18.2",
    "standard-version": "^7.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "keywords": [
    "router",
    "spa",
    "microrouter"
  ],
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true,
    "semi": false
  }
}
